<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_material_light"
        android:elevation="6dp"
        android:orientation="vertical"
        android:weightSum="1">

        <android.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f51b5"
            android:elevation="12dp">

            <ImageButton
                android:id="@+id/btn_take_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/btn_hint_test"
                android:cropToPadding="false"
                android:onClick="startExamActivity"
                android:src="@drawable/ic_testaplus"
                android:paddingRight="5pt" />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Src lang"
                android:id="@+id/translate_src_lang"
                android:textColor="#ffffff"
                android:paddingRight="10pt" />

            <ImageButton
                android:layout_gravity="right"
                android:id="@+id/swap_langs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/btn_swap_langs"
                android:onClick="swapLanguages"
                android:src="@drawable/ic_swap_langs_1_white" />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Target lang"
                android:textColor="#ffffff"
                android:id="@+id/translate_target_lang" />

        </android.widget.Toolbar>


        <EditText
            android:id="@+id/edit_srcText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btn_translate"
            android:layout_toStartOf="@+id/btn_translate"
            android:background="@android:color/transparent"
            android:padding="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:background="@color/background_material_light"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/btn_listen_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="sayQuestion"
                android:src="@drawable/ic_listen_rounded_black" />

            <ImageButton
                android:id="@+id/btn_paste_clip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="pasteAndTranslate"
                android:src="@drawable/ic_paste_rounded_black" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/btn_paste_clipboard"
                android:onClick="translate"
                android:src="@drawable/ic_search_rounded_black" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_translation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="1">

    </LinearLayout>

</LinearLayout>
