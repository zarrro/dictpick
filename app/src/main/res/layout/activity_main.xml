<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_srcText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_translate"
        android:layout_toStartOf="@+id/btn_translate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:id="@+id/btn_translate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="translate"
        android:layout_above="@+id/layout_translation"
        android:layout_alignParentTop="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="104dp"
        android:layout_height="37dp"
        android:text="Test"
        android:id="@+id/button_start_test"
        android:layout_gravity="right"
        android:layout_weight="0.00"
        android:onClick="startExamActivity"
        android:layout_below="@+id/edit_srcText"
        android:layout_toRightOf="@+id/layout_translation"
        android:layout_toEndOf="@+id/layout_translation" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_translation"
        android:weightSum="1"
        android:layout_below="@+id/edit_srcText"
        android:layout_toLeftOf="@+id/btn_translate"
        android:layout_toStartOf="@+id/btn_translate">

    </LinearLayout>

</RelativeLayout>
