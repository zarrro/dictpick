<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/translation_entry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EN"
        android:id="@+id/te_fragment_src_lang"
        android:layout_alignParentTop="true"
     />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/te_fragment_src_text"
        android:layout_toEndOf="@+id/te_fragment_src_lang" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BG"
        android:id="@+id/te_fragment_target_lang"
        android:layout_below="@+id/te_fragment_src_lang"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/te_fragment_target_text"
        android:layout_below="@+id/te_fragment_src_text"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/te_fragment_target_lang" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btn_save_translation_entry"
        android:layout_below="@+id/te_fragment_target_text"
        android:layout_alignParentEnd="true" />

</RelativeLayout>